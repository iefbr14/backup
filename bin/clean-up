#!/bin/sh

set -e

echo "Space: before"
echo
df -h
echo

if [ $# -eq 0 ] ; then
	set -- *.*.*
fi

for i in "$@" ; do 
	if [ ! -d "$i" ] ; then
		echo "No such directory $i -- not cleaned"
		continue
	fi

	if [ ! -d "$i/rdiff-backup-data" ] ; then
		echo "Not a backup $i -- not cleaned"
		continue
	fi
   (
	echo "======================= $i ======================"
	echo "Start `date`: $i"
	cd $i
	echo "=---------------------- $i ----------------------"
	rdiff-backup --force --remove-older-than 90D . 
   )
done

echo "Finished `date`"
echo
echo "Space: after"
echo
df -h
