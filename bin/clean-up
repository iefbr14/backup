#!/bin/sh

(

set -e
cd /b

echo "Space: before"
echo
df -h
echo

if [ $# -eq 0 ] ; then
	set -- bliss rock silver drugs threefish sodium
fi

for i in "$@" ; do 
	if [ ! -d "$i" ] ; then
		echo "No such directory $i -- not cleaned"
		continue
	fi
   (
	echo "======================= $i ======================"
	echo "Start `date`: $i"
	cd $i
	echo "=---------------------- $i ----------------------"
	rdiff-backup --force --remove-older-than 90D . 
   )
done

echo "Finished `date`"
echo
echo "Space: after"
echo
df -h

) 2>&1 | mail -s "Mica weekly incremental cleanup" drew@ss.org 
